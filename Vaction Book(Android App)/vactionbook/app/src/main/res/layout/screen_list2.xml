<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:contentPadding="6dp"
    android:elevation="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="6sp"
    app:cardBackgroundColor="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" >
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgIcon"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <LinearLayout
                android:background="#bf000000"
                android:layout_alignParentBottom="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="1dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/txtTitle"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" >
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:text="25 Jul 2016"
                android:textColor="#949292"
                android:layout_marginLeft="7dp" />
            <TextView
                android:layout_below="@+id/txtDate"
                android:layout_marginTop="8dp"
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:text="Memory Description"
                android:textColor="#000000"
                android:layout_marginLeft="7dp" />

            <ImageView
                android:src="@drawable/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignTop="@+id/txtDate"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>