            <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
            <li><a href="#">Link</a></li>
          </ul>-->
          <form class="navbar-form navbar-left" role="search" method="post" action="/games">
            <div class="form-group">
              <%= csrf_meta_tags %>
              <input type="text" class="form-control" name="search" id="navbar-search-input" placeholder="Search">
            </div>
          </form>
        </div>
        <!-- /.navbar-collapse -->
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <li class="<% if @type == 0 %>active <% end %>">
            <a href="/games?type=0">Comming soon games <span class="sr-only">(current)</span></a></li>
            <li class="<% if @type == 1 %>active <% end %>"><a href="/games?type=1">Available games <span class="sr-only">(current)</span></a></li>
            <li class=""><a href="#">Used games </a></li>
            <li class="active"><a href="#">Survey page </a></li>

            <!-- /.messages-menu -->

            <!-- Notifications Menu -->
            
            <!-- Tasks Menu -->
            
            <!-- User Account Menu -->
            <li class="dropdown user user-menu">
              <!-- Menu Toggle Button -->
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <!-- The user image in the navbar-->
                <img src="/img/user2-160x160.jpg" class="user-image" alt="User Image">
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                <span class="hidden-xs"><%= current_user.name %></span>
              </a>
              <ul class="dropdown-menu">
                <!-- Menu Body -->
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                    <!-- <a href="#" class="btn btn-default btn-flat">Profile</a> -->
                  </div>
                  <div class="pull-right">
                    <%= link_to "Log out", logout_path, method: "delete" %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
        <!-- /.navbar-custom-menu -->
      </div>
      <!-- /.container-fluid -->
    </nav>
  </header>
  <!-- Full Width Column -->
  <div class="content-wrapper">
    <div class="container">
      <form action="survey" method="post">
        <div class="form-group">
          <label>You name</label>
          <input type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
          <label>Age</label>
          <input type="number" name="age" class="form-control">
        </div>
        <div class="form-group">
          <label>Do you like this site?</label>
          <input type="radio" name="like"> Yes
          <input type="radio" name="like"> No
        </div>
        <input type="submit" name="submit">
      </form>
    </div>
    <!-- /.container -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="container">
      <div class="pull-right hidden-xs">
        
