<% body_class "register-page" %>
<div class="register-box">
  <div class="register-logo">
    Game Rental System
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>
  
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="form-group has-feedback">
        <%= f.text_field :name, class: "form-control", placeholder: "Full name" %>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.text_field :mobile, class: "form-control", placeholder: "Mobile" %>
        <span class="glyphicon glyphicon-phone form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password_comfirmation, class: "form-control", placeholder: "Retype Password" %>
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <!-- <div class="checkbox icheck">
            <label>
              <input type="checkbox"> I agree to the <a href="#">terms</a>
            </label>
          </div> -->
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
           <%= f.submit "Register", class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>

    <a href="<%= login_path() %>" class="text-center">I already have a membership</a>
  </div>
  <!-- /.form-box -->
</div>